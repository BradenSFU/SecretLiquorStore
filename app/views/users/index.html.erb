<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Admin User Console</h1>

  <table>
    <thead>
      <tr>
        <th class="rowhead">Username</th>
        <th class="rowhead">Email</th>
        <th class="rowhead">Isadmin</th>
        <th class="rowhead" colspan="3">Options</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="column"><%= user.Username %></td>
          <td class="column"><%= user.Email %></td>
          <td class="column"><%= user.Isadmin %></td>
          <td class="column"><%= link_to 'Show', user %></td>
          <% if user.Username != 'admin' %>
            <td class="column"><%= link_to 'Edit', edit_user_path(user) %></td>
          <% end %>
          <% if user.Username != 'admin' %>
            <td class="column"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Make new User', new_user_path %>
</div>
