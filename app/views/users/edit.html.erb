<h1>Editing User</h1>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li style="color:white"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Username %>
    <%= f.text_field :Username %>
  </div>

  <div class="field">
    <%= f.label :Email %>
    <%= f.text_field :Email %>
  </div>

  <div class="field">
    <%= f.label :Biography%>
    <%= f.text_field :Biography %>
  </div>


  <% if current_user && current_user.Isadmin? %>
    <div class="field">
      <%= f.label :Isadmin %>
      <%= f.check_box :Isadmin %>
    </div>
    <div class="field">
      <%= f.label :Password %>
      <%= f.password_field :Password %>
    </div>

    <div class="field">
      <%= f.label :Password_confirmation %>
      <%= f.password_field :Password_confirmation %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
