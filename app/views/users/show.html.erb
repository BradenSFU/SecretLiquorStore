<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.Username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.Email %>
</p>

<p>
  <strong>Biography:</strong>
  <%= @user.Biography %>
</p>


<h3><%= "Recipes made by " + @user.Username%></h3>

<% if @user.publishes.size > 0 %>
  <table id="publishes">
    <% @user.publishes.each do |d| %>
      <tr>
        <td><%= link_to d.Rname, d %></td>
        <td><%= image_tag (d.image.blank? ? "no-image.jpg" : d.image.thumb.url), size: "200x200", alt: "Image not found."%></td>
        <td><%= d.ingredients %></td>
        <td><%= d.instructions %></td>
        <% if current_user %>
          <td><%= link_to 'Edit', edit_publish_path(d) %></td>
          <td><%= link_to 'Delete', d, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>This user did not publish any recipes</p>
<% end %>

<br>

