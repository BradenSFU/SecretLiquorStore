<p id="notice"><%= notice %></p>

<h2>
  <%= @publish.Rname %>
</h3><br>

<strong>User:</strong>
<% if @publish.user == nil %>
  <%= "The user who made this recipe was banned"  %>
<% else %>
  <%= link_to @publish.user.Username, @publish.user %>
<% end %>

<br></br>

<p>
  <strong>
    <%= image_tag (@publish.image.blank? ? "no-image.jpg" : @publish.image.thumb.url), size: "200x200", alt: "Image not found." %>
  </strong>
</p>

<p>
  ingredients:<br>
  <strong>
    <%= @publish.ingredients %>
  </strong>
</p>

<p>
  Instructions:<br>
  <strong>
    <%= @publish.instructions %>
  </strong>
</p>

<% if current_user %>
  <% if current_user.likes.include?(@publish) %>
    <%= link_to 'Unlike', method: remove_from_likes %> |
  <% elsif @publish.user==nil || @publish.user.id != current_user.id %>
    <%= link_to 'Like', method: add_to_likes %> |
    <%= link_to 'Dislike', method: add_to_dislikes %>
  <% end %>
<% else %>
  <%= link_to 'Like', sign_up_url %> |
  <%= link_to 'Dislike', sign_up_url %>
<% end %>

<br></br>
<strong>
  Likes: <%= count_like(@publish) %><br>
  Dislikes: <%= count_dislike(@publish) %>
</strong>
