<p id="notice"><%= notice %></p>

<h2>
  <%= @publish.Rname %>
</h3><br>

<strong>User:</strong>
<% if @publish.user == nil %>
  <%= "The user who made this recipe was banned"  %>
<% else %>
  <%= link_to @publish.user.Username, @publish.user %>
<% end %>

<br></br>

<p>
  <strong>
    <%= image_tag (@publish.image.blank? ? "no-image.jpg" : @publish.image.thumb.url), size: "200x200", alt: "Image not found." %>
  </strong>
</p>

<p>
  ingredients:<br>
  <strong>
    <%= @publish.ingredients %>
  </strong>
</p>

<p>
<strong>
  Instructions:<br>
  <%= @publish.instructions %>
</strong>
</p>

<br></br>
<% if current_user %>
  <% if !current_user.publishes.include?(@publish) %>
    <% if current_user.likes.include?(@publish) %>
      <%= link_to 'Unlike', :method => remove_from_likes(@drink)%>
    <% elsif current_user.likes.include?(@drink) %> <%#Mark as Islike=false%>
      <%= link_to 'Un-dislike', :method => remove_from_dislikes(@drink)%>
    <% else %>
      <%= link_to 'Like', method: like %>
      <%= link_to 'Dislike', method: dislike %>
    <% end %>
  <% end %>
<% else %>
  <%= link_to 'Like', sign_up_url%>
  <%= link_to 'Dislike', sign_up_url%>
<% end %>

<% totalLikes = 0 %>
<% totalDislikes = 0 %>


<br></br>
<strong>
  Likes: <%= totalLikes %><br>
  Dislikes: <%= totalDislikes %>
</strong>
