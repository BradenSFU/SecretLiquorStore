<%= flash_message %>
<div class="drinkImage">
  <%= image_tag(@drink['strDrinkThumb'] ? "#{@drink['strDrinkThumb']}" : "no-image.jpg", size: "200x200", alt: "Image not found.") %>
</div>
<div class="drinkDetails">
  <h1 class="drinkName"><%= @drink['strDrink']%></h1>
  <ul class="ingredients">
    <%= for i in 1..15 do %>
      <% if @drink["strIngredient#{i}"] == "" then %>
        <% break %>
      <% end %>
      <li><%= @drink["strMeasure#{i}"] %><%= @drink["strIngredient#{i}"]%></li>
    <% end %>
  </ul>
  <p class="instructions"><%= @drink['strInstructions'] %></p>
</div>

<%= render "like_or_dislike" %>

